{
  "name": "sharaspot-bot",
  "version": "1.0.0",
  "description": "SharaSpot EV Charging WhatsApp Bot - Production Ready",
  "main": "dist/index.js",
  "scripts": {
    "// === DEVELOPMENT ===": "",
    "dev": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "// === DATABASE OPERATIONS ===": "",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx src/db/migrate.ts && npm run seed:all",
    "db:fix": "tsx src/scripts/fix-database.ts",
    "// === DATABASE DEBUG SCRIPTS ===": "",
    "db:check-structure": "tsx src/scripts/check-database.ts",
    "db:check-schema": "tsx src/scripts/check-drizzle-schema.ts",
    "db:check-all": "npm run db:check-structure && npm run db:check-schema",
    "db:test-insert": "tsx -e \"import('./src/scripts/check-drizzle-schema.ts').then(m => m.testManualInsert())\"",
    "db:check": "tsx -e \"import('./src/scripts/fix-database.ts').then(m => m.fixDatabaseSchema())\"",
    "db:verify": "tsx -e \"console.log('Verifying database...'); process.exit(0);\"",
    "db:fix-columns": "tsx src/scripts/fix-station-owners-columns.ts",
    "db:check-lengths": "tsx src/scripts/check-column-lengths.ts",
    "// === DATA SEEDING ===": "",
    "seed": "tsx src/db/seed-sample-data.ts",
    "seed:tn": "tsx src/db/seed-tamil-nadu-data.ts",
    "seed:all": "npm run seed && npm run seed:tn",
    "seed:clean": "tsx -e \"console.log('🧹 Database cleanup not yet implemented')\"",
    "// === BASIC TESTING (Existing Files) ===": "",
    "test": "tsx src/testing/test-runner.ts",
    "test:automated": "tsx src/testing/automated-bot-tester.ts",
    "test:bot": "tsx src/testing/automated-bot-tester.ts",
    "test:components": "tsx src/testing/automated-bot-tester.ts",
    "// === PHASE TESTING (Your Custom Files) ===": "",
    "test:phase4": "tsx src/testing/phase4-tester.ts",
    "test:booking": "tsx src/testing/phase4-tester.ts",
    "test:queue": "tsx src/testing/phase4-tester.ts",
    "// === COMPREHENSIVE TESTING (Enhanced) ===": "",
    "test:comprehensive": "echo '⚠️ Comprehensive tester not implemented yet - use npm run test:all instead'",
    "test:enhanced": "echo '⚠️ Enhanced tester not implemented yet - use npm run test:all instead'",
    "// === FEATURE TESTING (Using Scripts) ===": "",
    "test:geocoding": "tsx src/scripts/quick-test.ts geocoding",
    "test:stations": "tsx src/scripts/quick-test.ts stations",
    "test:chennai": "tsx src/scripts/quick-test.ts chennai",
    "test:coimbatore": "tsx src/scripts/quick-test.ts coimbatore",
    "// === QUICK FIXES ===": "",
    "fix:all": "npm run db:fix && echo '✅ Database fixed'",
    "fix:schema": "npm run db:generate && npm run db:push",
    "fix:permissions": "chmod +x src/scripts/*.ts",
    "// === HEALTH CHECKS ===": "",
    "health": "tsx -e \"console.log('🏥 Health check not implemented yet')\"",
    "health:db": "tsx src/scripts/fix-database.ts",
    "health:api": "tsx -e \"console.log('🌐 API health check not implemented yet')\"",
    "// === PRODUCTION ===": "",
    "deploy": "npm run build && echo '🚀 Deploy script not implemented'",
    "docker:build": "docker build -t sharaspot-bot .",
    "docker:run": "docker run -p 3000:3000 sharaspot-bot"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.4",
    "express": "^4.18.2",
    "geolib": "^3.3.4",
    "helmet": "^7.1.0",
    "ngeohash": "^0.6.3",
    "node-cron": "^4.2.1",
    "node-geocoder": "^4.4.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.3",
    "sharp": "^0.34.4",
    "tesseract.js": "^6.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ev-charging",
    "whatsapp-bot",
    "sharaspot",
    "electric-vehicle",
    "charging-station",
    "tamil-nadu",
    "bot",
    "webhook"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sharaspot-bot"
  },
  "bugs": {
    "url": "https://github.com/your-username/sharaspot-bot/issues"
  },
  "homepage": "https://github.com/your-username/sharaspot-bot#readme",
  "license": "MIT",
  "author": {
    "name": "SharaSpot Team",
    "email": "team@sharaspot.com"
  }
}
